<h1>New game</h1>
<div class="container">
  <% @letters.each do |e| %>
    <p><%= e %></p>
<% end %>
</div>
<div class="form">
 <form action="/score" method="post" data-turbo="false">
 <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
  <label for="attempt">What is the longest word you can find?</label>
    <input type="text" id="attempt" class="form-control" name="word" value="">
    <input type="submit" class="btn btn-primary" value="Play">
  </div>
</form>
</div>